<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.ProfileActivity">

    <RelativeLayout
        android:id="@+id/j"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"/>
    </RelativeLayout>
    <View
        android:layout_below="@id/j"
        android:id="@+id/shadow_view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/dropshadowlight"/>

    <ScrollView
        android:layout_below="@id/shadow_view6"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="50dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:id="@+id/fi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account"
            android:layout_alignParentBottom="true"
            android:textSize="28sp"
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/bold_normal"/>
    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 7070430936"
                android:fontFamily="@font/regular"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp"/>
        </RelativeLayout>


        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/full_name"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/f"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/regular"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/regular"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:layout_below="@id/j"
            android:id="@+id/shadow_view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dropshadowlight"/>


        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/emailaddress"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/g"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/regular"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/regular"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/shadow_view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dropshadowlight"/>


        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/current_address"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Address"
                android:fontFamily="@font/regular"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:fontFamily="@font/regular"
                android:textColor="@color/colorPrimaryDark"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <View
            android:id="@+id/shadow_view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/dropshadowlight"/>

        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/i"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Support"
                android:fontFamily="@font/regular"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/next"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:textColor="@color/colorPrimary"
                android:id="@+id/k"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About us"
                android:fontFamily="@font/regular"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/next"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <Button
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_drwable"
            android:text="Logout"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_marginBottom="70dp"/>
    </LinearLayout>
 </ScrollView>
</RelativeLayout>
