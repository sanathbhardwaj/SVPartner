<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.DisplayName">

    <RelativeLayout
        android:id="@+id/j"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/back"/>
    </RelativeLayout>
    <View
        android:id="@+id/shadow_view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/j"
        android:background="@drawable/dropshadowlight"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shadow_view6"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:id="@+id/fi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:fontFamily="@font/bold_normal"
                    android:text="Shop Details"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="28sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/shop_name_rl"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/f"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop Name"
                    android:fontFamily="@font/regular"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:layout_below="@id/j"
                android:id="@+id/shadow_view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dropshadowlight"/>

            <RelativeLayout
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/shop_slogan_rl"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/fy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop Slogan"
                    android:fontFamily="@font/regular"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/shop_slogan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:fontFamily="@font/regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <View
                android:layout_below="@id/j"
                android:id="@+id/shadow_view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dropshadowlight"/>

            <RelativeLayout
                android:background="?android:attr/selectableItemBackground"
                android:id="@+id/shop_timing_rl"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="45dp">
                <TextView
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/fyl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shop Timing"
                    android:fontFamily="@font/regular"
                    android:layout_centerVertical="true"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:gravity="center_vertical"
                   android:layout_alignParentEnd="true">
                   <TextView
                       android:gravity="end"
                       android:id="@+id/shop_days"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:fontFamily="@font/regular"
                       android:textColor="@color/colorPrimaryDark"/>
                   <TextView
                       android:id="@+id/shop_timing"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text=""
                       android:layout_gravity="end"
                       android:fontFamily="@font/regular"
                       android:textColor="@color/colorPrimaryDark"
                       android:layout_alignParentEnd="true"/>

               </LinearLayout>
            </RelativeLayout>
            <View
                android:layout_below="@id/j"
                android:id="@+id/shadow_view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/dropshadowlight"/>


            <Button
                android:id="@+id/done"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:background="@drawable/button_drwable"
                android:text="Done"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:layout_marginBottom="70dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>